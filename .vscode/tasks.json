{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tailwind CSS: Watch",
      "type": "shell",
      "command": "npx tailwindcss -i ./app/globals.css -o ./app/output.css --watch",
      "problemMatcher": [],
      "group": {
